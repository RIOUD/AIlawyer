{
  "monitoring_interval": 30,
  "alert_thresholds": {
    "cpu_usage": 80.0,
    "memory_usage": 85.0,
    "disk_usage": 90.0,
    "response_time": 60.0,
    "error_rate": 5.0,
    "failed_logins": 10
  },
  "endpoints": {
    "lawyeragent": "http://localhost:5000",
    "ollama": "http://localhost:11434",
    "grafana": "http://localhost:3000",
    "prometheus": "http://localhost:9090"
  },
  "retention_days": 30,
  "alert_channels": [
    "console",
    "email",
    "webhook"
  ]
}