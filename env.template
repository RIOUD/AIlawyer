# Legal Assistant AI Platform - Environment Configuration Template
# Copy this file to .env and fill in your secure values

# Environment
ENVIRONMENT=production

# Security Configuration (CRITICAL - Change these in production!)
# Generate secure secrets using: openssl rand -hex 32
SECRET_KEY=your_secure_secret_key_here_min_32_chars
MASTER_PASSWORD=your_secure_master_password_here_min_12_chars
JWT_SECRET=your_secure_jwt_secret_here_min_32_chars
ADMIN_PASSWORD=your_secure_admin_password_here_min_8_chars

# Database Configuration
SOURCE_DOCUMENTS_PATH=./source_documents
VECTOR_STORE_PATH=./chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2
OLLAMA_MODEL=mixtral
OLLAMA_BASE_URL=http://localhost:11434
MAX_RETRIEVAL_DOCS=4

# Security Features
SECURITY_ENABLED=true
SECURITY_DIR=./security
ENABLE_AUDIT_LOGGING=true

# Session Configuration
SESSION_TIMEOUT=3600
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION=900

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=legal_assistant.log

# Monitoring Configuration
MONITORING_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development Settings (set to false in production)
DEBUG=false
TESTING=false 